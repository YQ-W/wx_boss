/* pages/lagou/la'gou.wxss */

#header{
    height: 45px;
    line-height: 45px;
    background-color: #00b38a;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    position: relative;

}
.item{
    padding: 14px;
    border-bottom: 1px solid #e8e8e8;
}
.logo{
    float: left;
    width: 60px;
    height: 60px;
}
.item-desc{
    margin-left: 70px;
    height: 62px;
    color: #333;
}
.item-desc text{
  display: block;
  font-size:12px; 
}
.item-title{
   font-size: 14px;
    margin-bottom: 6px;
    width: 80%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.item-info{
    margin-bottom: 6px;
    font-size: 12px;
    width: 100%;
    height: 15px;
    line-height: 15px;
}
.item-salary{
  float: right;
  height: 15px;
  margin-top: -15px;
}